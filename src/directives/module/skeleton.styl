
.skeleton-line {
  background: linear-gradient(90deg, #f4f4f4 25%, #e6e8eb 37%, #f4f4f4 63%);
  background-size: 400% 100%;
  animation: shine-lines 1.4s ease infinite;
}

@keyframes shine-lines {
  0% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0 50%;
  }
}